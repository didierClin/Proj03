<p id="notice"><%= notice %></p>

<h1>Liste des utilisateurs</h1>

<table class="table table">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>

        <td><%= user.name %></td>
        <td><%= image_tag(user.avatar_url, size: "25x25", alt: "Mon avatar") if user.avatar.present? %> </td>
        <td><%= link_to 'Afficher', user %></td>
        <td><%= link_to 'Editer', edit_user_path(user) %></td>
        <td><%= link_to 'Supprimer', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

