<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table table">
  <thead>
    <tr>
      <th>Titre</th>
      <th>Contenu</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.content %></td>
        <td><%= post.user.name %></td>
        <td><%= link_to 'Afficher', post %></td>
        <% if post.user == current_user %>
            <td><%= link_to 'Editer', edit_post_path(post) %></td>
            <td><%= link_to 'Supprimer', post, method: :delete, data: { confirm: 'Confirmer la suppression?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouveau post', new_post_path %>
